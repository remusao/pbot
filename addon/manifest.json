{
	"manifest_version": 2,
	"name": "Privacy Bot",
	"version": "0.1.1",
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"32": "icons/icon.png"
		},
		"default_title": "Privacy Bot",
		"default_popup": "popup/popup.html"
	},
	"permissions": [
		"storage",
		"activeTab",
		"tabs"
	],
	"background": {
		"scripts": [
			"background_scripts/background_scripts.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content_scripts/content_scripts.js"
			]
		}
	],
	"icons": {
		"32": "icons/icon.png"
	},
	"applications": {
		"gecko": {
			"strict_min_version": "50.0"
		}
	}
}